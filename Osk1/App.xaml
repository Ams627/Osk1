<Application x:Class="Osk1.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Osk1"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <DataTemplate DataType="{x:Type local:Key1}" >
            <Border BorderThickness="1" Focusable="False"
                    Background="Transparent"
                    BorderBrush="Black"
                    Width="50" Height="50" Margin="{Binding Margin}" Tag="Key">
                <StackPanel>
                    <local:KeyStoreControl Key="{Binding Key}"/>
                    <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" Text="{Binding Label}" />
                </StackPanel>
            </Border>
        </DataTemplate>
    </Application.Resources>
</Application>
